<script>
    const p = @Html.Raw(Json.Serialize(ViewData["p"]));
    console.log(p)
    const products = @Html.Raw(Json.Serialize(ViewData["Listp"]));

    const $ = document.querySelector.bind(document)
    const $$ = document.querySelectorAll.bind(document)
    const searchText = $('.content__search input');
    let currentPage = 1;
    let perPage = 5;
    let start = 0;
    let end = perPage;
    let productArr = [];
    productArr = products;
    const nextBtn = $("#Next")
    const prevBtn = $("#Prev")
    const pageNumber = $(".page-number")
    let totalPages = Math.ceil(productArr.length / perPage)
    function getCurrentPage(currentPage) {
        start = (currentPage - 1) * perPage;
        end = currentPage * perPage
        totalPages = Math.ceil(productArr.length / perPage)
    }
    function initRender(productAr, totalPage) {
        renderProduct(productAr);
        renderListPage(totalPage);
    }

    function renderProduct(productArr) {
        let html = '';
        const content = productArr.map((item, index) => {
            if (index >= start && index < end) {
                html += `  <tr class="alert" role="alert">
                        <td >
                            <span>${item.name}</span>
                        </td>
                        <td>${item.code}</td>
                        <td>${item.quantity}</td>
                        <td>${item.time}</td>
                        <td>${item.sale}</td>
                        <td class="status"><span class="${item.status}">${item.state}</span></td>
                        <td>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true"><i id=${item.id} class="fas fa-pencil-alt"></i></span>
                        </button>
                        </td>
                        <td>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true"><i id=${item.id} class="fas fa-minus-circle"></i></span>
                        </button>
                        </td>
                        </tr>`;
                return html;
            }
        });
        document.querySelector('.table tbody').innerHTML = html
    }
    initRender(productArr, totalPages)
    changePage()
    function renderListPage(totalPages) {
        let html = '';
        html += `<li class="page-item active"><a class="page-link ">${1}</a></li>`
        for (let i = 2; i <= totalPages; i++) {
            html += `<li class="page-item"><a class="page-link" >${i}</a></li>`
        }
    if(totalPages==1){
            prevBtn.classList.add("disabled")
            nextBtn.classList.add("disabled")
        }
        pageNumber.innerHTML = html
    }
    function changePage() {
        const currentPages = $$('.page-number li')
        for (let i = 0; i < currentPages.length; i++) {
            currentPages[i].addEventListener('click', (e) => {
                const value = i + 1;
                currentPage = value;
                let numberPage = $$(".page-number li")
                for (let j of numberPage) {
                    if (j.classList.contains("active")) {
                        j.classList.remove("active");
                    }
                }
                currentPages[i].classList.add('active')
                if (currentPage > 1 && currentPage < totalPages) {
                    prevBtn.classList.remove("disabled")
                    nextBtn.classList.remove("disabled")
                }
                if (currentPage == 1) {
                    prevBtn.classList.add("disabled")
                    nextBtn.classList.remove("disabled")
                }
                if (currentPage == totalPages) {
                    nextBtn.classList.add("disabled")
                    prevBtn.classList.remove("disabled")
                }
                if(totalPages==1){
                        prevBtn.classList.add("disabled")
                        nextBtn.classList.add("disabled")
                    }
                // currentPages[i].classList.add("active")
                getCurrentPage(currentPage)
                renderProduct(productArr)
                Delete();
                Update();
            })
        }
    }

    nextBtn.addEventListener('click', (e) => {
        currentPage++;
        if (currentPage > totalPages) {
            currentPage = totalPages
        }
        if (currentPage == totalPages) {
            nextBtn.classList.add("disabled")
        }
        prevBtn.classList.remove("disabled")
        let numberPage = $$(".page-number li")
        for (let j of numberPage) {
            if (j.classList.contains("active")) {
                j.classList.remove("active");
            }
        }
        numberPage[currentPage - 1].classList.add('active')
        getCurrentPage(currentPage)
        renderProduct(productArr)
        Delete();
        Update();
    })
    prevBtn.addEventListener('click', (e) => {
        console.log(currentPage)
        currentPage--;
        if (currentPage <= 1) {
            currentPage = 1
        }
        if (currentPage == 1) {
            prevBtn.classList.add("disabled")
        }
        nextBtn.classList.remove("disabled")
        let numberPage = $$(".page-number li")
        for (let j of numberPage) {
            if (j.classList.contains("active")) {
                j.classList.remove("active");
            }
        }
        numberPage[currentPage - 1].classList.add('active')
        getCurrentPage(currentPage)
        renderProduct(productArr)
        Delete();
        Update();
    })
</script>
<!-- modal trong nút Update sản phẩm -->
<script>
    function Update() {
        const Updatebtns = $$(".fa-pencil-alt")
        const modal = document.querySelector('.js-modal')
        const modalContainer = document.querySelector('.js-modal-container')
        const closeBtn = document.querySelector(".js-close-buy-ticket")
        const capnhatBtn = $("#capnhatbtn")
        for (const Updatebtn of Updatebtns) {
            Updatebtn.addEventListener("click", function () {
                modal.classList.add('open')
                jQuery.ajax({
                    url: '/tbl_voucher/GetVoucherId',
                    dataType: "json",
                    type: "POST",
                    data: { id: Updatebtn.id },
                    success: function (data) {
                        var p = JSON.parse(data)
                        $("#msp-up").value = Updatebtn.id
                        $("#tensp-up").value = p.voucher_name
                        $("#code-up").value = p.voucher_code
                        $("#sl-up").value = p.voucher_quantity
                        $("#date-up").value = p.voucher_date
                        $("#km-up").value = p.voucher_sale
                    },
                    error: function (xhr) {
                        alert('Error');
                    }
                });
            })
        }
        closeBtn.addEventListener("click", function () {
            modal.classList.remove('open')
        })
        modal.addEventListener("click", function () {
            modal.classList.remove('open')
        })
        modalContainer.addEventListener("click", function (e) {
            e.stopPropagation();
        })
        capnhatBtn.addEventListener("click", function () {
            if ($("#tensp-up").value.length == 0) {
                $("#modal-3").classList.add('open')
                $("#thongbao-modal").innerHTML = "Chưa nhập tên voucher"
            }
            else {
                if ($("#sl-up").value <0) {
                    $("#modal-3").classList.add('open')
                    $("#thongbao-modal").innerHTML = "Chưa nhập số lượng voucher hoặc số lượng không hợp lệ"
                }
                else {
                    if ($("#date-up").value=='') {
                        $("#modal-3").classList.add('open')
                        $("#thongbao-modal").innerHTML = "Chưa chọn ngày hết hạn"
                    }
                    else {
                        if ($("#code-up").value=='') {
                            $("#modal-3").classList.add('open')
                            $("#thongbao-modal").innerHTML = "Chưa nhập code voucher"
                        }
                        else {
                            jQuery.ajax({
                                url: '/tbl_voucher/CapNhatVoucher',
                                dataType: "json",
                                type: "POST",
                                data: {
                                    voucher_id: $("#msp-up").value,
                                    voucher_name: $("#tensp-up").value,
                                    voucher_code: $("#code-up").value,
                                    voucher_quantity: $("#sl-up").value,
                                    voucher_date: $("#date-up").value,
                                    voucher_sale: $("#km-up").value,
                                },
                                success: function (data) {
                                    if (data != 0) {
                                        $("#thongbao-modal").innerHTML = "Cập nhật voucher thành công"
                                        document.getElementById("thongbao-btn").style.visibility = 'hidden';
                                        $("#modal-3").classList.add('open')
                                        setTimeout(function () {
                                            location.reload()
                                            $("#modal-3").classList.remove('open')
                                        }, 1000);
                                    }
                                    else {
                                        $("#thongbao-modal").innerHTML = "Cập nhật voucher thất bại"
                                        $("#modal-3").classList.add('open')
                                    }
                                },
                                error: function (xhr) {
                                    $("#thongbao-modal").innerHTML = "Phải nhập đầy đủ thông tin voucher"
                                    $("#modal-3").classList.add('open')
                                }
                            });
                        }
                    }
                }
            }
        })
    }
    Update()
</script>
