        start = (currentPage - 1) * perPage;
        end = currentPage * perPage
        totalPages = Math.ceil(productArr.length / perPage)
    }
    function initRender(productAr, totalPage) {
        renderProduct(productAr);
        renderListPage(totalPage);
    }

